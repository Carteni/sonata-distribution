{% extends "@AppAdmin/Block/block_post_layout.html.twig" %}

{% trans_default_domain settings.catalogue %}

{% block block_title %}<i class="fa fa-pencil-square"></i> {{ settings.title|trans }}{% endblock %}

{% block post_status %}
    <td>
        {% trans_default_domain "SonataAdminBundle" %}
        {% set label_type = post.status is constant("AppBundle\\Entity\\Post::DRAFT") ? 'warning' : 'success' %}
        <span class="label label-{{ label_type }}">{{ post.status|trans() }}</span>
    </td>
{% endblock %}

{% block comments_count %}{% endblock %}
